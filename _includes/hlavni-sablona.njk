    <link rel="stylesheet" href="/css/glide.core.min.css">
	<link rel="stylesheet" href="/css/glide.theme.min.css">

</head>

<body>

    <header class="header">
        <img class="header__logo" src="/images/Logo_new.svg" alt="logo kavárny">

        <nav class="menu">
            <input type="checkbox" class="menu__checkbox" id="menu-checkbox">

            <label for="menu-checkbox" class="menu__toggler"><span class="tog">☰</span></label>

            <ul class="menu__list">
                <li class="menu__item {{ 'menu__item--active' if page.fileSlug === ''}}"><a href="/" class="menu__link">HOME</a></li>
                <li class="menu__item {{ 'menu__item--active' if page.fileSlug === 'onas'}}"><a href="/onas" class="menu__link">O NÁS</a></li>
                <li class="menu__item {{ 'menu__item--active' if page.fileSlug === 'nabidka'}}"><a href="/nabidka" class="menu__link">NABÍDKA</a></li>
                <li class="menu__item {{ 'menu__item--active' if page.fileSlug === 'fotogalerie'}}"><a href="/fotogalerie" class="menu__link">FOTOGALERIE</a></li>
                <li class="menu__item {{ 'menu__item--active' if page.fileSlug === 'akce'}}"><a href="/akce" class="menu__link">AKCE</a></li>
                <li class="menu__item {{ 'menu__item--active' if page.fileSlug === 'kontakt'}}"><a href="/kontakt" class="menu__link">KONTAKT</a></li>
            </ul>
        </nav>
    </header>

    <main class="main">

        {{ content | safe }} 


    </main>

    <footer class="footer">
        <div class="footer__grid">
            <div class="footer__grid-column">
                <h3>Otevírací doba</h3>
                <p>
                    Po - Pá: 7:00 - 22:00<br>
                    So - Ne: 9:00 - 23:00
                </p>
            </div>
            <div class="footer__grid-column">
                <h3>Adresa</h3>
                <p>
                    Pražská 1 <br>
                    Praha 1, 110 00<br>
                  
                </p>
            </div>
            <div class="footer__grid-column">
                <h3>Kontakt</h3>
                <p>
                    +420 732 000 000<br>
                    <a href="mailto:kavarna@spribehem.cz">kavárna@spribehem.cz</a>
                </p>
            </div>
        </div>

            <div class="footer__copyright">
                &copy;2021, SPIX
            </div>
        
    </footer>
    

    {% if page.fileSlug === 'fotogalerie' %}

    <script src="/js/fslightbox.js"></script>

    {% endif %}

    <script src="/js/glide.min.js"></script>

    <script>
        new Glide('.glide', {
            autoplay: 4000,
            hoverpause: false,
            perView: 1,
            type: "carousel"
        }).mount()
    </script>  

</body>
</html>
